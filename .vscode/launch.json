{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Remote attach",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/python-virtualenv/bin/python",
            "miDebuggerServerAddress": "compiler3:1234",
            "cwd": "${workspaceRoot}",
            "externalConsole": true,
            "linux": {
                "MIMode": "gdb"
            }
        },
        {
            "type": "lldb",
            "request": "attach",
            "name": "Attach to PID",
            "pid": "${command:pickMyProcess}" // use ${command:pickProcess} to pick other users' processes
        },
        {
            "name": "Python: HQC",
            "type": "python",
            "request": "launch",
            "module": "simulate.hqc",
            "cwd": "${workspaceFolder}/simulate-with-python/",
            "justMyCode": true
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "cargo bench",
            "program": "${workspaceFolder}/target/debug/deps/decoder-5112f5994917eb64",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "main.py test",
            "type": "python",
            "request": "launch",
            "program": "simulate-with-python/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "test"
            ]
        },
        {
            "name": "main.py hqc_simulate",
            "type": "python",
            "request": "launch",
            "program": "simulate-with-python/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "hqc_simulate",
                "--verbose",
                "--decode-every",
                "100",
                "--key-file",
                "test-hqc.key"
            ]
        },
        {
            "name": "main.py test_rust_package",
            "type": "python",
            "request": "launch",
            "program": "simulate-with-python/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "test_rust_package",
            ]
        }
    ]
}